                  <Font name="Artifakt Element Bold" size="28.0" />
               </font></Button>
            <Button fx:id="scoreButton" mnemonicParsing="false" onAction="#scoreButtonAction" prefHeight="71.0" prefWidth="276.0" styleClass="menu-button" text="PLACAR">
