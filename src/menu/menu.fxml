   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="gameLogo" fitHeight="148.0" fitWidth="1238.0" pickOnBounds="true" preserveRatio="true">
